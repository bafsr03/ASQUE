// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id                 String    @id
  email              String    @unique
  stripeCustomerId   String?   @unique
  subscriptionStatus String    @default("FREE") // FREE, PRO
  subscriptionEnds   DateTime?
  quoteCount         Int       @default(0)
  createdAt          DateTime  @default(now())
  deletedAt          DateTime?
  updatedAt          DateTime  @updatedAt

  products   Product[]
  clients    Client[]
  quotations Quotation[]
  settings   Settings?
}

model Product {
  id          String   @id @default(cuid())
  userId      String
  code        String
  name        String
  shortDesc   String? // Brief description for quote line items
  longDesc    String? // Detailed description for appendix
  price       Float
  category    String?
  specs       String? // JSON string for technical specifications
  images      String? // JSON array of image URLs
  stockStatus String   @default("available")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  links      ProductLink[]
  quoteItems QuoteItem[]

  @@index([userId])
  @@index([code])
  @@index([name])
  @@index([category])
  @@unique([userId, code]) // Code unique per user
}

model ProductLink {
  id        String  @id @default(cuid())
  productId String
  linkType  String // 'product_page', 'datasheet', 'faq', 'video'
  url       String
  label     String?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model Client {
  id        String   @id @default(cuid())
  userId    String
  name      String
  taxId     String // RUC for Peru
  address   String?
  contact   String?
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  quotations Quotation[]

  @@index([userId])
  @@index([taxId])
  @@index([name])
  @@unique([userId, taxId]) // Tax ID unique per user
}

model Quotation {
  id           String   @id @default(cuid())
  userId       String
  quoteNumber  String
  clientId     String
  date         DateTime @default(now())
  validityDays Int      @default(15)
  agentName    String?
  status       String   @default("draft") // 'draft', 'sent', 'accepted', 'rejected'
  notes        String?
  paymentTerms String?
  discount     Float    @default(0) // Global discount
  taxRate      Float    @default(0.18) // IGV rate
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  client Client      @relation(fields: [clientId], references: [id])
  items  QuoteItem[]

  @@index([userId])
  @@index([quoteNumber])
  @@index([clientId])
  @@index([status])
  @@index([date])
  @@unique([userId, quoteNumber]) // Quote number unique per user
}

model QuoteItem {
  id        String @id @default(cuid())
  quoteId   String
  productId String
  quantity  Int
  unitPrice Float
  discount  Float  @default(0) // Line-item discount
  subtotal  Float // Calculated: (quantity * unitPrice) - discount

  quote   Quotation @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  product Product   @relation(fields: [productId], references: [id])

  @@index([quoteId])
  @@index([productId])
}

model Settings {
  id             String   @id @default(cuid())
  userId         String   @unique
  companyName    String   @default("My Company")
  companyAddress String?
  companyEmail   String?
  companyPhone   String?
  companyTaxId   String?
  logoUrl        String?
  font           String   @default("Helvetica")
  primaryColor   String   @default("2563eb")
  secondaryColor String   @default("1e40af")
  template       String   @default("modern")
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
